name=flex
version=2.6.4
source=https://github.com/westes/flex/releases/download/v2.6.4/flex-2.6.4.tar.gz

build() {
    ./configure --prefix=/usr \
                --docdir=/usr/share/doc/flex-2.6.4 \
                --disable-static
    make $MAKEOPTS
}

package() {
    make install
    ln -sv flex /usr/bin/lex
}
